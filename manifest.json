{
  "manifest_version": 3,
  "name": "Styl Chrome Extension",
  "description": "Manage page styles using templates with CSS injection",
  "version": "0.0.1",
  "icons": {},
  "side_panel": {
    "default_path": "src/sidepanel/index.html",
    "openPanelOnActionClick": true
  },
  "permissions": [
    "tabs",
    "webNavigation",
    "webRequest",
    "contextMenus",
    "storage",
    "sidePanel"
  ],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "dist/src/shared/service_worker.js"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "js": ["dist/src/inject/content_script.js"],
      "matches": ["<all_urls>"],
      "all_frames": true,
      "persistent": true
    }
  ]
}
