{
  "manifest_version": 3,
  "name": "Chrome Extension v3 Starter",
  "description": "A minimal example of a chrome extension using manifest v3",
  "version": "0.0.1",
  "icons": {
    "16": "logo/logo-16.png",
    "48": "logo/logo-48.png",
    "128": "logo/logo-128.png"
  },
  "action": {
    "default_title": "Chrome Addon v3 Starter",
    "default_popup": "src/popup/index.html"
  },
  "permissions": [
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "contextMenus",
    "storage"
  ],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "src/shared/service-worker.ts"
  },
  "content_scripts": [
    {
      "js": ["foreground.js"],

      "matches": ["https://github.com/*"]
    }
  ]
}
